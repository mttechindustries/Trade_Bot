# Gemini Trade Bot UI Environment Configuration

# Required: Gemini API Key for AI-powered analysis
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# News Analysis APIs
VITE_NEWS_API_KEY=your_newsapi_key_here
VITE_CRYPTO_PANIC_API_KEY=your_crypto_panic_key_here

# Optional: Binance API credentials for live trading (use testnet for development)
VITE_BINANCE_API_KEY=your_binance_api_key_here
VITE_BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Optional: Alternative market data sources
COINGECKO_API_KEY=your_coingecko_api_key_here

# Application Configuration
NODE_ENV=development
VITE_APP_TITLE=Gemini Trade Bot UI
VITE_APP_VERSION=1.0.0

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000

# Risk Management Defaults
VITE_DEFAULT_MAX_POSITIONS=5
VITE_DEFAULT_RISK_PER_TRADE=2
VITE_DEFAULT_STOP_LOSS=2
VITE_DEFAULT_TAKE_PROFIT=6

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_SOUND_ALERTS=true

# Feature Flags
VITE_ENABLE_REAL_TRADING=false
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_BACKTESTING=true
VITE_ENABLE_MARKET_SCREENER=true

# Development Settings
VITE_DEV_MODE=true
VITE_MOCK_DATA=true
VITE_LOG_LEVEL=debug
